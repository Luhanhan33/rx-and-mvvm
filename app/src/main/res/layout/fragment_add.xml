<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragement.UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="416dp"
            android:layout_height="53dp"
            android:background="@drawable/bgc"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="詳細資料"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:translationX="25dp"
                android:translationY="10dp" />

            <Button
                android:id="@+id/finshButton"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:background="@drawable/board_tab_selector_background"
                android:backgroundTint="@color/teal_200"
                android:text="完成"
                android:textSize="20sp"
                android:translationX="340dp"
                android:translationY="5dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.096">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="309dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:ems="10"
                android:hint="搜尋食物"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:translationX="15dp"
                android:translationY="0dp" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="36dp"
                android:layout_height="34dp"
                android:background="#FFFFFF"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/ic_search"
                android:translationX="333dp"
                android:translationY="7dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加照片："
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintVertical_bias="0.01999998" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="或"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/cameraButton"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintVertical_bias="0.017" />

        <ImageButton
            android:id="@+id/cameraButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/ic_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.116"
            app:layout_constraintStart_toEndOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/photoButton"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:background="@null"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.663"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintVertical_bias="0.001"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="249dp"
            android:layout_height="217dp"
            android:src="@drawable/foodphoto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cameraButton"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginBottom="310dp"
            android:text="時間"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="166dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="308dp"
            android:ems="10"
            android:hint="請輸入日期"
            android:inputType="date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextTime"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.43"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="309dp"
            android:ems="10"
            android:hint="請輸入時間"
            android:inputType="time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextDate"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="261dp"
            android:text="份量"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <RadioGroup
            android:id="@+id/servingsizeGroup"
            android:layout_width="286dp"
            android:layout_height="47dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="220dp"
            android:orientation="horizontal"
            android:scrollbars="vertical"
            android:translationY="-11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate">

            <RadioButton
                android:id="@+id/smallButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="少量"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/moderateButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="適中"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/satiateButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="飽食"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/excessButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="過量"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="200dp"
            android:text="種類"
            android:textColor="#000000"
            android:textSize="20sp"
            android:translationY="-3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <CheckBox
            android:id="@+id/vegetablecheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="176dp"
            android:text="蔬菜"
            android:textSize="18sp"
            android:translationY="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fruitcheckBox"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/servingsizeGroup" />

        <CheckBox
            android:id="@+id/fruitcheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="176dp"
            android:text="水果"
            android:textSize="18sp"
            android:translationY="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dairycheckBox"
            app:layout_constraintStart_toEndOf="@+id/vegetablecheckBox"
            app:layout_constraintTop_toBottomOf="@+id/servingsizeGroup" />

        <CheckBox
            android:id="@+id/dairycheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="176dp"
            android:text="乳品"
            android:textSize="18sp"
            android:translationY="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/eggbeancheckBox"
            app:layout_constraintStart_toEndOf="@+id/fruitcheckBox"
            app:layout_constraintTop_toBottomOf="@+id/servingsizeGroup" />

        <CheckBox
            android:id="@+id/eggbeancheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="176dp"
            android:text="蛋豆魚肉"
            android:textSize="18sp"
            android:translationY="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dairycheckBox"
            app:layout_constraintTop_toBottomOf="@+id/servingsizeGroup" />

        <CheckBox
            android:id="@+id/wholegrainscheckBox"
            android:layout_width="111dp"
            android:layout_height="36dp"
            android:layout_marginBottom="144dp"
            android:text="全榖雜糧"
            android:textSize="18sp"
            android:translationX="-6dp"
            android:translationY="-11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetablecheckBox"
            tools:ignore="TouchTargetSizeCheck" />

        <CheckBox
            android:id="@+id/oilcheckBox"
            android:layout_width="164dp"
            android:layout_height="36dp"
            android:layout_marginBottom="144dp"
            android:text="油脂與堅果種子"
            android:textSize="18sp"
            android:translationX="-5dp"
            android:translationY="-11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/wholegrainscheckBox"
            app:layout_constraintTop_toBottomOf="@+id/fruitcheckBox"
            tools:ignore="TouchTargetSizeCheck" />

        <FrameLayout
            android:layout_width="341dp"
            android:layout_height="126dp"
            android:translationY="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oilcheckBox"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="備註"
                android:textColor="#000000"
                android:textSize="20sp"
                android:translationX="3dp"
                android:translationY="1dp"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="522dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="291dp"
                android:layout_height="99dp"
                android:src="@drawable/note"
                android:translationX="45dp" />

            <EditText
                android:id="@+id/inputnote"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint="選填"
                android:inputType="textMultiLine|textPersonName"
                android:textSize="18sp"
                android:translationX="55dp"
                android:translationY="3dp"
                tools:ignore="TouchTargetSizeCheck" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>